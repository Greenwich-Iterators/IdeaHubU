{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": ".",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": false
	},
	"include": ["backend/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
